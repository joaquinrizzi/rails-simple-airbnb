<div class="container-mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h1><%= @flat.name%></h1>
      <h3><%= @flat.address %></h3>
      <p><%= @flat.description %></p>
      <div class="row">
        <div class="col-lg-6">
          <p><i class='fas fa-euro-sign'></i><%= @flat.price_per_night %></p>
        </div>
        <div class="col-lg-6">
          <p><i class="fa fa-group"></i><%= @flat.number_of_guests %></p>
        </div>
      </div>
      <div class="row">
        <small class="text-body-secondary">
          <%= link_to "Edit", edit_flat_path(@flat)%>
        </small>
      </div>
    </div>
  </div>
</div>
